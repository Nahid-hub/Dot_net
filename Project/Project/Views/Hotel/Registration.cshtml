
@{
    ViewBag.Title = "Registration";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>

</head>

<body>

   

    <h2>Registration</h2>

    <form action="" method="post">
        <label for="id"> ID: </label>
        <input type="text" id="id" name="Id" value="@(Model == null ? "" : Model.Id)" />
        @Html.ValidationMessage("Id", "", new { @class = "text-danger" }, "span")
        <br />

        <label for="name"> Hotel Name: </label>
        <input type="text" id="name" name="Hotel_Name" value="@(Model == null ? "" : Model.Hotel_Name)" />
        @Html.ValidationMessage("Hotel_Name", "", new { @class = "text-danger" }, "span")
        <br />

        <label for="password"> Password: </label>
        <input type="text" id="name" name="Password" value="@(Model == null ? "" : Model.Password)" />
        @Html.ValidationMessage("Password", "", new { @class = "text-danger" }, "span")
        <br />

        <label> Hotel Type: </label>
        <select name="Hotel_Type">
            <option value=""> Select</option>
            <option value="Five Star" @(Model != null && Model.Hotel_Type == "Five Star" ? "selected" : "")> Five Star</option>
            <option value="Three Star" @(Model != null && Model.Hotel_Type == "Three Star" ? "selected" : "")> Three Star</option>
            <option value="Two Star" @(Model != null && Model.Hotel_Type == "Two Star" ? "selected" : "")> Two Star</option>
            <option value="Local" @(Model != null && Model.Hotel_Type == "Local" ? "selected" : "")> Local</option>

        </select>
        @Html.ValidationMessage("Hotel_Type", "", new { @class = "text-danger" }, "span")
        <br />

        <label> Area: </label>
        <select name="Hotel_Type">
            <option value=""> Select</option>
            <option value="Dhaka" @(Model != null && Model.Area == "Dhaka" ? "selected" : "")> Dhaka</option>
            <option value="Khulna" @(Model != null && Model.Area == "Khulna" ? "selected" : "")> Khulna</option>
            <option value="Jashore" @(Model != null && Model.Area == "Jashore" ? "selected" : "")> Jashore</option>
            <option value="Kuakata" @(Model != null && Model.Area == "Kuakata" ? "selected" : "")> Kuakata</option>
            <option value="Cox'sBazar'" @(Model != null && Model.Area == "Cox'sBazar" ? "selected" : "")> Cox'sBazar'</option>
            <option value="Rajshahi" @(Model != null && Model.Area == "Rajshahi" ? "selected" : "")> Rajshahi</option>
            <option value="Sylhet" @(Model != null && Model.Area == "Sylhet" ? "selected" : "")> Sylhet</option>
        </select>
        @Html.ValidationMessage("Hotel_Type", "", new { @class = "text-danger" }, "span")
        <br />
        <label for="address"> Address: </label>
        <input type="text" id="name" name="Address" value="@(Model == null ? "" : Model.Address)" />
        @Html.ValidationMessage("Address", "", new { @class = "text-danger" }, "span")
        <br />
        <label for="phone"> Phone Number: </label>
        <input type="text" id="phone" name="Phone" value="@(Model == null ? "" : Model.Phone)" />
        @Html.ValidationMessage("Phone", "", new { @class = "text-danger" }, "span")
        <br />

        <label for="email"> Email: </label>
        <input type="text" id="email" name="Email" value="@(Model == null ? "" : Model.Email)" />
        @Html.ValidationMessage("Email", "", new { @class = "text-danger" }, "span")
        <br />
        <br />

        <input class="btn btn-primary" type="submit" name="registration_submit" value="Registration" />
    </form>

</body>

</html>